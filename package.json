{
  "name": "@funboxteam/helpers",
  "version": "2.1.0",
  "description": "JS helpers for everyday use",
  "scripts": {
    "precommit": "lint-staged",
    "postcommit": "git update-index --again",
    "prebuild": "rm -rf dist",
    "build": "babel lib --out-dir dist",
    "prepublishOnly": "npm run build"
  },
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "author": "Igor Adamenko <mail@igoradamenko.com> (https://igoradamenko.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/funbox/diamonds"
  },
  "files": [
    "dist/",
    "CHANGELOG.md",
    "README.md"
  ],
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@funboxteam/eslint-config": "4.12.0",
    "eslint": "5.3.0",
    "husky": "0.14.3",
    "lint-staged": "4.1.3"
  },
  "lint-staged": {
    "linters": {
      "lib/**/*.{js,jsx}": [
        "eslint --fix --cache -c .eslintrc.js",
        "git add"
      ]
    },
    "renderer": "silent"
  }
}
