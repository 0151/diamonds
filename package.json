{
  "name": "snippets",
  "version": "1.0.0",
  "description": "JS snippets for everyday use",
  "scripts": {
    "precommit": "lint-staged",
    "postcommit": "git update-index --again"
  },
  "author": "Igor Adamenko <mail@igoradamenko.com> (https://igoradamenko.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/funbox/diamonds"
  },
  "devDependencies": {
    "@funboxteam/eslint-config": "4.12.0",
    "eslint": "5.3.0",
    "husky": "0.14.3",
    "lint-staged": "4.1.3"
  },
  "lint-staged": {
    "linters": {
      "lib/**/*.{js,jsx}": [
        "eslint --fix --cache -c .eslintrc.js",
        "git add"
      ]
    },
    "renderer": "silent"
  }
}
